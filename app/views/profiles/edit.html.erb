
<h1>Create Profile</h1> 

<%= form_with url: "/profiles/edit", method: "post" do |f| %>

<%= f.label :name %>
<%= f.text_field :name, value: @profile.name %>
<br>
<br>

<%= f.label :age %>
<%= f.number_field :age, value: @profile.age%>
<br>
<br>

<%= f.label :university %>
<%= f.text_field :university, value: @profile.university %>
<br>
<br>

<%= f.label :city %>
<%= f.text_field :city, value: @profile.city %>
<br>
<br>

<%= f.label "Short Introduction" %>
<%= f.text_field :bio, value: @profile.bio  %>
<br>
<br>

<%= f.label :major %>
<%= f.text_field :major, value: @profile.major  %>
<br>
<br>

<%= f.label :cohort %>
<%= f.collection_select :cohort_id, Cohort.all, :id, :name, {:selected => @profile.cohort.id} %>
<br>
<br>

<%= f.submit "Update Profile"%>

<% end %>